{% extends 'base.html.twig' %}

{% block title %}
	Connexion
{% endblock %}

{% block body %}
	<div class="block">
		<h2 class="pb-30">Connexion</h2>
		<form action="{{ path('login')}}" method="post">
			<div class="form-row">
				<label for="email">Email</label>
				<input type="text" id="email" autofocus name="_username" value="{{ username }}"></input>
		</div>
		<div class="form-row">
			<label for="password">Mot de passe</label>
			<input type="password" id="password" name="_password"></input>
	</div>
	<div class="form-row">
		<label for="remenber_me">
			<input type="checkbox" id="remenber_me" autofocus name="_remenber_me">
			se souvenir de moi
		</label>
	</div>
	<input type="hidden" name="_csrf_token" value="{{csrf_token('authenticate')}}">
	{% if error %}
		<ul class="form-errors pb-20">
			<li>{{error.messageKey | trans(error.messageData,'security')}}</li>
		</ul>
	{% endif %}

	<button class="btn btn-primary mr-10">
		Connexion</button>
	<small>
		<a href="{{ path('signup') }}">Vous n'avez pas encore de compte ?</a>
	</small>
</form></div>{% endblock %}
